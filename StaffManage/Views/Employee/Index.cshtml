@model List<Employee>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-dark text-white py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2">Employee List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">


        <table class="table table-hover">
            <thead class="thead-light">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email Address</th>
                    <th>Mobile Number</th>
                    <th>Date of Birth</th>
                    <th>Photo</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model.OrderBy(e => e.LastName))
                {
                    <tr>
                        <td>@employee.FirstName</td>
                        <td>@employee.LastName</td>
                        <td>@employee.Email</td>
                        <td>@employee.Mobile</td>
                        <td>@employee.DateOfBirth.ToShortDateString()</td>
                        <td>
                            @if (!string.IsNullOrEmpty(employee.PhotoFile))
                            {
                                <img src="~/images/@employee.PhotoFile" alt="@employee.FirstName's photo" class="img-thumbnail" style="max-width: 100px; max-height: 100px;" />
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-primary">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Employee" asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-danger">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
